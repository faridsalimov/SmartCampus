<script>
    // Calendar functionality for Teacher Dashboard
    const teacherLessons = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
        (object)(Model?.TodayLessons != null && Model.TodayLessons.Any()
            ? Model.TodayLessons.GroupBy(l => l.LessonDate.Date.ToString("yyyy-MM-dd"))
                .ToDictionary(g => g.Key, g => g.ToList())
            : new Dictionary<string, object>())
    ));

    let currentDateTeacher = new Date();

    function renderCalendarTeacher() {
        const year = currentDateTeacher.getFullYear();
        const month = currentDateTeacher.getMonth();
        
        // Update month/year display
        const monthYear = currentDateTeacher.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
        const monthElement = document.getElementById('monthYearTeacher');
        if (monthElement) {
            monthElement.textContent = monthYear;
        }

        // Clear calendar
        const calendarDates = document.getElementById('calendarDatesTeacher');
        if (!calendarDates) return;
        
        calendarDates.innerHTML = '';

        // Get first day of month and number of days
        const firstDay = new Date(year, month, 1).getDay();
        const daysInMonth = new Date(year, month + 1, 0).getDate();
        const daysInPrevMonth = new Date(year, month, 0).getDate();

        // Add previous month's dates
        for (let i = firstDay - 1; i >= 0; i--) {
            const dateEl = document.createElement('div');
            dateEl.className = 'calendar-date empty';
            dateEl.textContent = daysInPrevMonth - i;
            calendarDates.appendChild(dateEl);
        }

        // Add current month's dates
        const today = new Date();
        for (let day = 1; day <= daysInMonth; day++) {
            const dateEl = document.createElement('div');
            const fullDate = new Date(year, month, day);
            const dateStr = fullDate.toISOString().split('T')[0];

            dateEl.className = 'calendar-date';
            dateEl.textContent = day;

            // Mark today
            if (fullDate.toDateString() === today.toDateString()) {
                dateEl.classList.add('today');
            }

            // Check for lessons/sessions on this date
            if (teacherLessons && teacherLessons[dateStr] && teacherLessons[dateStr].length > 0) {
                dateEl.classList.add('has-sessions');
            }

            calendarDates.appendChild(dateEl);
        }

        // Add next month's dates
        const totalCells = calendarDates.children.length;
        const remainingCells = 42 - totalCells; // 6 rows * 7 days
        for (let day = 1; day <= remainingCells; day++) {
            const dateEl = document.createElement('div');
            dateEl.className = 'calendar-date empty';
            dateEl.textContent = day;
            calendarDates.appendChild(dateEl);
        }
    }

    // Navigation for Teacher Dashboard
    const prevBtn = document.getElementById('prevMonthTeacher');
    const nextBtn = document.getElementById('nextMonthTeacher');
    
    if (prevBtn) {
        prevBtn.addEventListener('click', () => {
            currentDateTeacher.setMonth(currentDateTeacher.getMonth() - 1);
            renderCalendarTeacher();
        });
    }

    if (nextBtn) {
        nextBtn.addEventListener('click', () => {
            currentDateTeacher.setMonth(currentDateTeacher.getMonth() + 1);
            renderCalendarTeacher();
        });
    }

    // Initial render with safety check
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', renderCalendarTeacher);
    } else {
        renderCalendarTeacher();
    }
</script>
