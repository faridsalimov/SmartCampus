@page
@model SmartCampus.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="shadow-sm rounded-4" style="max-width:480px;width:100%;">
        <div class="bg-primary text-white text-center rounded-top-4 py-4">
            <h3 class="mb-0"><i class="fas fa-graduation-cap me-2"></i>SmartCampus</h3>
            <small class="opacity-75">Academic Management System</small>
        </div>

        <div class="p-4">
            <h5 class="mb-3 text-center fs-3">Welcome back</h5>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger bg-danger bg-opacity-10 border-0 rounded-3 d-flex align-items-center gap-3 py-3" role="alert" aria-live="polite">
                    <i class="fas fa-exclamation-circle fs-4 text-danger"></i>
                    <div class="small mb-0">@Model.ErrorMessage</div>
                </div>
            }

            @if (ViewData.ModelState != null && ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
            {
                <div class="alert alert-danger bg-danger bg-opacity-10 border-0 rounded-3 d-flex align-items-center gap-3 py-3" role="alert" aria-live="polite">
                    <i class="fas fa-exclamation-circle fs-4 text-danger"></i>
                    <div class="small mb-0">
                        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@err.ErrorMessage</div>
                        }
                    </div>
                </div>
            }

            <form method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="you@example.com" autocomplete="email" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="current-password" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-600">
                    <i class="fas fa-sign-in-alt me-2"></i> Sign In
                </button>
            </form>

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
