@page
@{
    ViewData["Title"] = "Access Denied";
}

<div style="display: flex; align-items: center; justify-content: center; min-height: calc(100vh - 96px);">
    <div style="text-align: center; padding: 40px;">
        <div style="font-size: 4rem; color: #ff3b30; margin-bottom: 20px;">
            <i class="fas fa-lock"></i>
        </div>
        <h1 style="font-size: 2rem; font-weight: 700; color: #1d1d1f; margin-bottom: 12px;">
            Access Denied
        </h1>
        <p style="color: #636366; font-size: 1.1rem; margin-bottom: 30px; max-width: 500px;">
            You do not have permission to access this page. Please log in with an administrator or teacher account.
        </p>
        <a href="/" style="display: inline-block; background: linear-gradient(135deg, #5e5ce6 0%, #0066ff 100%); color: white; padding: 12px 32px; border-radius: 12px; text-decoration: none; font-weight: 600; transition: all 0.3s;">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>
