@page
@using SmartCampus.Web.Pages.Shared
@model SmartCampus.Web.Pages.Grades.DetailsModel
@{
    ViewData["Title"] = "Grade Details";

    var pageHeader = new PageHeaderModel
    {
        Title = Model.Grade?.StudentName ?? "Grade",
        Subtitle = $"Score: {Model.Grade?.Score}",
        IconClass = "fas fa-star",
        IconColor = "#ff9500",
        GradientStart = "rgba(255, 149, 0, 0.05)",
        GradientEnd = "rgba(52, 199, 89, 0.05)",
        BorderColor = "rgba(255, 149, 0, 0.1)"
    };
}

<partial name="_PageHeader" model="pageHeader" />


<div style="background: linear-gradient(135deg, rgba(94, 92, 230, 0.05) 0%, rgba(0, 102, 255, 0.05) 100%); border-radius: 16px; padding: 30px; margin-bottom: 30px; border: 1px solid rgba(94, 92, 230, 0.1);">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 16px;">
                <a asp-page="Index" class="text-decoration-none" style="color: #5e5ce6;">
                    <i class="fas fa-arrow-left me-2"></i>Grades
                </a>
                <span style="color: #a1a1a6;">/</span>
                <span style="color: #636366;">Details</span>
            </div>
            <h1 style="font-size: 2rem; font-weight: 700; color: #1d1d1f; margin-bottom: 8px;">
                <i class="fas fa-star me-2" style="color: #5e5ce6;"></i>Grade Details
            </h1>
            <p style="color: #636366; margin-bottom: 0; font-size: 0.95rem;">
                <i class="fas fa-eye me-1"></i>
                View grade information
            </p>
        </div>
        <div>
            <span class="badge" style="background-color: #5e5ce6; font-size: 0.9rem; padding: 8px 12px;">
                <i class="fas fa-list-ul me-1"></i>Details
            </span>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-8">
        
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light border-bottom">
                <h5 class="mb-0">
                    <i class="fas fa-file-alt me-2" style="color: #5e5ce6;"></i>Grade Information
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Grade != null)
                {
                    
                    <div class="mb-4">
                        <h6 style="color: #1d1d1f; font-weight: 600; margin-bottom: 12px;">
                            <i class="fas fa-user-circle me-2" style="color: #34c759;"></i>Student
                        </h6>
                        <div style="background-color: #f5f5f7; padding: 12px 16px; border-radius: 8px; border-left: 4px solid #34c759;">
                            <p style="margin: 0; color: #1d1d1f;">
                                <strong>@Model.Grade.StudentName</strong>
                            </p>
                        </div>
                    </div>

                    <hr style="border: none; height: 1px; background: #e5e5ea; margin: 24px 0;" />

                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <h6 style="color: #1d1d1f; font-weight: 600; margin-bottom: 8px;">
                                <i class="fas fa-percentage me-1" style="color: #5e5ce6;"></i>Score
                            </h6>
                            <p style="font-size: 1.5rem; font-weight: 700; color: #5e5ce6; margin: 0;">
                                @Model.Grade.Score
                            </p>
                        </div>
                        <div class="col-md-6 mb-4">
                            <h6 style="color: #1d1d1f; font-weight: 600; margin-bottom: 8px;">
                                <i class="fas fa-calendar-alt me-1" style="color: #5e5ce6;"></i>Graded Date
                            </h6>
                            <p style="margin: 0; color: #636366;">
                                @Model.Grade.GradedDate.ToString("MMM dd, yyyy")
                            </p>
                        </div>
                    </div>

                    <hr style="border: none; height: 1px; background: #e5e5ea; margin: 24px 0;" />

                    
                    @if (!string.IsNullOrEmpty(Model.Grade.Feedback))
                    {
                        <div class="mb-4">
                            <h6 style="color: #1d1d1f; font-weight: 600; margin-bottom: 12px;">
                                <i class="fas fa-comments me-2" style="color: #5e5ce6;"></i>Feedback
                            </h6>
                            <div style="background-color: #f9f9fb; padding: 16px; border-radius: 8px; border-left: 4px solid #5e5ce6;">
                                <p style="margin: 0; color: #636366; line-height: 1.6;">
                                    @Model.Grade.Feedback
                                </p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Grade information not found.
                    </div>
                }
            </div>

            
            <div class="card-footer bg-light border-top">
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-page="Index" class="btn btn-secondary" style="border-radius: 8px;">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                    @if (Model.Grade != null)
                    {
                        <a asp-page="Edit" asp-route-id="@Model.Grade.Id" class="btn btn-primary" style="border-radius: 8px; background: #5e5ce6; border: none;">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <button type="button" class="btn btn-danger" style="border-radius: 8px;" data-bs-toggle="modal" data-bs-target="#alertModal" data-alert-action="@Url.Page(null, new { handler = "Delete", id = Model.Grade.Id })" data-alert-message="Are you sure you want to delete this grade? This action cannot be undone.">
                            <i class="fas fa-trash me-1"></i>Delete
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

    
    <div class="col-lg-4">
        <div class="card bg-light border-0 mb-4">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb me-2" style="color: #5e5ce6;"></i>Information
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Score:</strong> The numeric grade assigned to the student.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Graded Date:</strong> When the grade was recorded.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Feedback:</strong> Additional comments or feedback for the student.
                    </small>
                </div>
                <div class="alert alert-info small mb-0">
                    <i class="fas fa-info-circle me-1"></i>
                    Use the Edit button to modify this grade.
                </div>
            </div>
        </div>

        <div class="card bg-light border-0">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-clock me-2" style="color: #5e5ce6;"></i>History
                </h6>
            </div>
            <div class="card-body">
                <small class="text-muted d-block mb-2">
                    <strong>Graded:</strong> @Model.Grade?.GradedDate.ToString("MMM dd, yyyy")
                </small>
                @if (Model.Grade?.UpdatedAt.HasValue == true)
                {
                    <small class="text-muted d-block">
                        <strong>Updated:</strong> @Model.Grade.UpdatedAt?.ToString("MMM dd, yyyy HH:mm")
                    </small>
                }
            </div>
        </div>
    </div>
</div>
