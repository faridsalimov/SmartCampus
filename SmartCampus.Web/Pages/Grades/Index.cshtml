@page
@using SmartCampus.Web.Pages.Shared
@model SmartCampus.Web.Pages.Grades.IndexModel
@{
    ViewData["Title"] = "Grades";
    var canEdit = User.IsInRole("Admin") || User.IsInRole("Teacher");
    var canDelete = User.IsInRole("Admin") || User.IsInRole("Teacher");

    var pageHeader = new PageHeaderModel
    {
        Title = "Grades",
        Subtitle = "View and manage student grades from lessons",
        IconClass = "fas fa-star",
        IconColor = "#ff9500",
        GradientStart = "rgba(255, 149, 0, 0.05)",
        GradientEnd = "rgba(52, 199, 89, 0.05)",
        BorderColor = "rgba(255, 149, 0, 0.1)"
    };
}

<partial name="_PageHeader" model="pageHeader" />


@if (Model.Grades?.Count > 0)
{
    <div class="card" style="border: 1px solid #e5e5ea; overflow: hidden;">
        <div style="overflow-x: auto;">
            <table class="table table-hover" style="margin-bottom: 0;">
                <thead style="background: #f5f5f7; border-bottom: 2px solid #e5e5ea;">
                    <tr>
                        <th style="padding: 16px; font-weight: 600; color: #1d1d1f; font-size: 0.875rem; text-align: left;">Student</th>
                        <th style="padding: 16px; font-weight: 600; color: #1d1d1f; font-size: 0.875rem; text-align: center;">Score</th>
                        <th style="padding: 16px; font-weight: 600; color: #1d1d1f; font-size: 0.875rem; text-align: center;">Grade</th>
                        <th style="padding: 16px; font-weight: 600; color: #1d1d1f; font-size: 0.875rem; text-align: center;">Lesson</th>
                        <th style="padding: 16px; font-weight: 600; color: #1d1d1f; font-size: 0.875rem; text-align: center;">Date</th>
                        <th style="padding: 16px; font-weight: 600; color: #1d1d1f; font-size: 0.875rem; text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grade in Model.Grades)
                    {
                        <tr style="border-bottom: 1px solid #e5e5ea; transition: background 0.2s ease;">
                            <td style="padding: 16px; color: #1d1d1f; text-align: left;">
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <img src="@(string.IsNullOrEmpty(User.FindFirst("ProfilePhoto")?.Value) ? $"https://ui-avatars.com/api/?name={System.Net.WebUtility.UrlEncode(grade.StudentName ?? "User")}&background=random&color=fff" : User.FindFirst("ProfilePhoto")?.Value)"
                                         alt="@(grade.StudentName ?? "Student")"
                                         style="width: 36px; height: 36px; border-radius: 50%; display: block; object-fit: cover;">
                                    <span>@(!string.IsNullOrEmpty(grade.StudentName) ? grade.StudentName : "N/A")</span>
                                </div>
                            </td>
                            <td style="padding: 16px; text-align: center;">
                                <span style="font-weight: 600; font-size: 1.125rem; color: #0066ff;">@grade.Score</span>
                            </td>
                            <td style="padding: 16px; text-align: center;">
                                @if (!string.IsNullOrEmpty(grade.LetterGrade))
                                {
                                    <span style="display: inline-block; background: rgba(52, 199, 89, 0.1); color: #34c759; padding: 4px 12px; border-radius: 6px; font-weight: 600; font-size: 0.875rem;">
                                        @grade.LetterGrade
                                    </span>
                                }
                                else
                                {
                                    <span style="color: #a1a1a6;">N/A</span>
                                }
                            </td>
                            <td style="padding: 16px; color: #636366; text-align: center;">@(grade.LessonTitle ?? "N/A")</td>
                            <td style="padding: 16px; color: #636366; font-size: 0.875rem; text-align: center;">
                                @{
                                    var displayDate = grade.GradedDate != default(DateTime) 
                                        ? grade.GradedDate.ToString("dd MMM yyyy") 
                                        : "Not Set";
                                }
                                @displayDate
                            </td>
                            <td style="padding: 16px; text-align: center;">
                                <div style="display: flex; gap: 8px; justify-content: center;">
                                    @await Html.PartialAsync("_ActionButtons", new { CanView = false, CanEdit = canEdit, CanDelete = canDelete, ViewUrl = "", EditUrl = Url.Page("Edit", new { id = grade.Id }), DeleteUrl = Url.Page("Index", new { handler = "Delete", id = grade.Id }), EntityId = grade.Id })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div style="background: linear-gradient(135deg, rgba(0, 102, 255, 0.05) 0%, rgba(94, 92, 230, 0.05) 100%); border: 1px solid rgba(0, 102, 255, 0.1); border-radius: 12px; padding: 40px; text-align: center;">
        <div style="font-size: 3rem; color: #0066ff; opacity: 0.3; margin-bottom: 16px;">
            <i class="fas fa-inbox"></i>
        </div>
        <h4 style="color: #1d1d1f; font-weight: 600; margin-bottom: 8px;">No Grades Found</h4>
        <p style="color: #636366; margin-bottom: 0;">Grades are assigned when lessons are completed. Start a lesson to add grades.</p>
    </div>
}

<partial name="_ConfirmModal" />
