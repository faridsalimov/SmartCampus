@page
@using SmartCampus.Web.Pages.Shared
@model SmartCampus.Web.Pages.Grades.EditModel
@{
    ViewData["Title"] = "Edit Grade";

    var pageHeader = new PageHeaderModel
    {
        Title = "Edit Grade",
        Subtitle = "Update student grade and feedback",
        IconClass = "fas fa-star",
        IconColor = "#ff9500",
        GradientStart = "rgba(255, 149, 0, 0.05)",
        GradientEnd = "rgba(52, 199, 89, 0.05)",
        BorderColor = "rgba(255, 149, 0, 0.1)"
    };
}

<partial name="_PageHeader" model="pageHeader" />

<div class="row">
    <div class="col-md-8">
        <h1 class="h3 mb-4">Edit Grade</h1>

        <form method="post">
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="card-body">
                    <input type="hidden" asp-for="Grade.Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Grade.StudentId" class="form-label">Student *</label>
                            <select asp-for="Grade.StudentId" class="form-select" required>
                                <option value="">-- Select Student --</option>
                                @foreach (var student in Model.AvailableStudents)
                                {
                                    <option value="@student.Id" selected="@(student.Id == Model.Grade.StudentId)">@student.FullName</option>
                                }
                            </select>
                            <span asp-validation-for="Grade.StudentId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Grade.GroupId" class="form-label">Group *</label>
                            <select asp-for="Grade.GroupId" class="form-select" required>
                                <option value="">-- Select Group --</option>
                                @foreach (var group in Model.UserGroups)
                                {
                                    <option value="@group.Id" selected="@(group.Id == Model.Grade.GroupId)">@group.GroupName</option>
                                }
                            </select>
                            <span asp-validation-for="Grade.GroupId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Grade.CourseId" class="form-label">Course</label>
                            <select asp-for="Grade.CourseId" class="form-select">
                                <option value="">-- Select Course --</option>
                                @foreach (var course in Model.AvailableCourses)
                                {
                                    <option value="@course.Id" selected="@(course.Id == Model.Grade.CourseId)">@course.Title</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Grade.Score" class="form-label">Score (0-100) *</label>
                            <input asp-for="Grade.Score" class="form-control" type="number" step="0.01" min="0" max="100" required>
                            <span asp-validation-for="Grade.Score" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Grade.LetterGrade" class="form-label">Letter Grade</label>
                            <select asp-for="Grade.LetterGrade" class="form-select">
                                <option value="">-- Select Letter Grade --</option>
                                <option value="A" selected="@(Model.Grade.LetterGrade == "A")">A (90-100)</option>
                                <option value="B" selected="@(Model.Grade.LetterGrade == "B")">B (80-89)</option>
                                <option value="C" selected="@(Model.Grade.LetterGrade == "C")">C (70-79)</option>
                                <option value="D" selected="@(Model.Grade.LetterGrade == "D")">D (60-69)</option>
                                <option value="F" selected="@(Model.Grade.LetterGrade == "F")">F (Below 60)</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Grade.GradeType" class="form-label">Grade Type</label>
                            <select asp-for="Grade.GradeType" class="form-select">
                                <option value="">-- Select Type --</option>
                                <option value="Midterm" selected="@(Model.Grade.GradeType == "Midterm")">Midterm</option>
                                <option value="Final" selected="@(Model.Grade.GradeType == "Final")">Final</option>
                                <option value="Homework" selected="@(Model.Grade.GradeType == "Homework")">Homework</option>
                                <option value="Project" selected="@(Model.Grade.GradeType == "Project")">Project</option>
                                <option value="Quiz" selected="@(Model.Grade.GradeType == "Quiz")">Quiz</option>
                                <option value="Participation" selected="@(Model.Grade.GradeType == "Participation")">Participation</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Grade.Feedback" class="form-label">Feedback</label>
                        <textarea asp-for="Grade.Feedback" class="form-control" rows="4" placeholder="Enter feedback for the student..."></textarea>
                        <span asp-validation-for="Grade.Feedback" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Update Grade
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
