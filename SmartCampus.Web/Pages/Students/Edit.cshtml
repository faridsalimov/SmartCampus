@page
@using SmartCampus.Web.Pages.Shared
@model SmartCampus.Web.Pages.Students.EditModel
@{
    ViewData["Title"] = "Edit Student";

    var pageHeader = new PageHeaderModel
    {
        Title = "Edit Student",
        Subtitle = "Update student information and enrollment details",
        IconClass = "fas fa-user-edit",
        IconColor = "#34c759",
        GradientStart = "rgba(52, 199, 89, 0.05)",
        GradientEnd = "rgba(0, 102, 255, 0.05)",
        BorderColor = "rgba(52, 199, 89, 0.1)"
    };
}

<partial name="_PageHeader" model="pageHeader" />


<div class="row">
    <div class="col-lg-8">
        <form method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>Student Information
                    </h5>
                </div>
                <div class="card-body">
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show d-none" 
                         role="alert" id="validationSummary">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Please fix the following errors:</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>

                    <input type="hidden" asp-for="Student.Id" />

                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Student.FullName" class="form-label">
                                <i class="fas fa-user me-1" style="color: #34c759;"></i>Full Name
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Student.FullName" class="form-control" 
                                   style="border: 1.5px solid #e5e5ea; border-radius: 8px;" required />
                            <small class="form-text text-muted">Complete legal name</small>
                            <span asp-validation-for="Student.FullName" class="text-danger small d-block mt-1"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="Student.Email" class="form-label">
                                <i class="fas fa-envelope me-1" style="color: #34c759;"></i>Email
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Student.Email" class="form-control" type="email"
                                   style="border: 1.5px solid #e5e5ea; border-radius: 8px;" required />
                            <small class="form-text text-muted">Student email address</small>
                            <span asp-validation-for="Student.Email" class="text-danger small d-block mt-1"></span>
                        </div>
                    </div>

                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Student.PhoneNumber" class="form-label">
                                <i class="fas fa-phone me-1" style="color: #34c759;"></i>Phone Number
                            </label>
                            <input asp-for="Student.PhoneNumber" class="form-control" 
                                   style="border: 1.5px solid #e5e5ea; border-radius: 8px;" />
                            <small class="form-text text-muted">Contact phone number</small>
                            <span asp-validation-for="Student.PhoneNumber" class="text-danger small d-block mt-1"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="Student.GroupId" class="form-label">
                                <i class="fas fa-users me-1" style="color: #34c759;"></i>Group
                                <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Student.GroupId" class="form-select" 
                                    style="border: 1.5px solid #e5e5ea; border-radius: 8px;" required>
                                <option value="">-- Select Group --</option>
                                @foreach (var group in Model.Groups)
                                {
                                    <option value="@group.Id" selected="@(group.Id == Model.Student.GroupId)">@group.GroupName</option>
                                }
                            </select>
                            <small class="form-text text-muted">Assigned student group</small>
                            <span asp-validation-for="Student.GroupId" class="text-danger small d-block mt-1"></span>
                        </div>
                    </div>

                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Student.EnrollmentYear" class="form-label">
                                <i class="fas fa-calendar me-1" style="color: #34c759;"></i>Enrollment Year
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Student.EnrollmentYear" class="form-control" type="number"
                                   style="border: 1.5px solid #e5e5ea; border-radius: 8px;" required />
                            <small class="form-text text-muted">Year of enrollment</small>
                            <span asp-validation-for="Student.EnrollmentYear" class="text-danger small d-block mt-1"></span>
                        </div>
                    </div>

                    
                    <div class="mb-4">
                        <label asp-for="Student.Bio" class="form-label">
                            <i class="fas fa-pen me-1" style="color: #34c759;"></i>Bio
                        </label>
                        <textarea asp-for="Student.Bio" class="form-control" rows="4"
                                  style="border: 1.5px solid #e5e5ea; border-radius: 8px;"></textarea>
                        <small class="form-text text-muted">Student biography or notes</small>
                        <span asp-validation-for="Student.Bio" class="text-danger small d-block mt-1"></span>
                    </div>

                    
                    <div class="mb-4">
                        <div class="form-check" style="padding: 12px; background: rgba(52, 199, 89, 0.05); border-radius: 8px; border: 1px solid rgba(52, 199, 89, 0.1);">
                            <input class="form-check-input" type="checkbox" asp-for="Student.IsActive" id="isActive" style="width: 20px; height: 20px; cursor: pointer;">
                            <label class="form-check-label ms-2" for="isActive" style="cursor: pointer; margin-top: 2px;">
                                <i class="fas fa-check-circle me-1" style="color: #34c759;"></i>Active Student
                            </label>
                        </div>
                        <small class="form-text text-muted d-block mt-2">Check to mark student as active</small>
                    </div>
                </div>
                <div class="card-footer bg-light border-top">
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-page="Index" class="btn btn-outline-secondary" style="border-radius: 8px;">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-success" style="border-radius: 8px; background: #34c759; border: none;">
                            <i class="fas fa-save me-1"></i>Update Student
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    
    <div class="col-lg-4">
        <div class="card bg-light border-0">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb me-2" style="color: #34c759;"></i>Tips & Guidelines
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Full Name:</strong> Ensure the student's complete legal name is entered.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Email:</strong> Should be the student's school email address for communication purposes.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Group:</strong> Ensure the student is assigned to the correct group based on their program.
                    </small>
                </div>
                <div class="alert alert-info small mb-0">
                    <i class="fas fa-info-circle me-1"></i>
                    Fields marked with <span class="text-danger">*</span> are required.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms).forEach(function(form) {
                    form.addEventListener('submit', function(event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                            document.getElementById('validationSummary').classList.remove('d-none');
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
