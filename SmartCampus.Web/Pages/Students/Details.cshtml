@page
@model SmartCampus.Web.Pages.Students.DetailsModel
@{
    ViewData["Title"] = "Student Details";
}


<div style="background: linear-gradient(135deg, rgba(52, 199, 89, 0.05) 0%, rgba(0, 102, 255, 0.05) 100%); border-radius: 16px; padding: 30px; margin-bottom: 30px; border: 1px solid rgba(52, 199, 89, 0.1);">
    <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 16px;">
        <a asp-page="Index" class="text-decoration-none" style="color: #34c759;">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
        <span style="color: #a1a1a6;">/</span>
        <span style="color: #636366;">Student Details</span>
    </div>
    <h1 style="font-size: 2rem; font-weight: 700; color: #1d1d1f; margin-bottom: 8px;">
        <i class="fas fa-user-circle me-2" style="color: #34c759;"></i>@Model.Student?.FullName
    </h1>
    <p style="color: #636366; margin-bottom: 0; font-size: 0.95rem;">
        <i class="fas fa-id-card me-1"></i>
        Student ID: @Model.Student?.StudentId
    </p>
</div>


<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light border-bottom">
                <h5 class="mb-0">
                    <i class="fas fa-file-alt me-2"></i>Personal Information
                </h5>
            </div>
            <div class="card-body">
                
                <div class="row mb-4">
                    <div class="col-md-6">
                        <small class="text-muted d-block mb-1">
                            <i class="fas fa-user me-1" style="color: #34c759;"></i>Full Name
                        </small>
                        <p style="font-size: 1rem; font-weight: 600; color: #1d1d1f; margin: 0;">
                            @Model.Student?.FullName
                        </p>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted d-block mb-1">
                            <i class="fas fa-check-circle me-1" style="color: #34c759;"></i>Status
                        </small>
                        <div>
                            @if (Model.Student?.IsActive == true)
                            {
                                <span class="badge bg-success" style="background: rgba(52, 199, 89, 0.2) !important; color: #34c759; padding: 6px 12px; border-radius: 6px; font-weight: 600; font-size: 0.85rem;">
                                    <i class="fas fa-check-circle me-1"></i>Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary" style="background: rgba(161, 161, 166, 0.2) !important; color: #a1a1a6; padding: 6px 12px; border-radius: 6px; font-weight: 600; font-size: 0.85rem;">
                                    <i class="fas fa-circle me-1"></i>Inactive
                                </span>
                            }
                        </div>
                    </div>
                </div>

                
                <div style="border-top: 1px solid #e5e5ea; padding-top: 20px; margin-top: 20px;">
                    <h6 style="font-weight: 600; color: #1d1d1f; margin-bottom: 16px;">
                        <i class="fas fa-envelope me-2" style="color: #34c759;"></i>Contact Information
                    </h6>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <small class="text-muted d-block mb-1">Email Address</small>
                            <p style="margin: 0;">
                                <a href="mailto:@Model.Student?.Email" style="color: #0066ff; text-decoration: none;">
                                    @Model.Student?.Email
                                </a>
                            </p>
                        </div>
                        <div class="col-md-6 mb-4">
                            <small class="text-muted d-block mb-1">Phone Number</small>
                            <p style="margin: 0; color: #636366;">
                                @(Model.Student?.PhoneNumber ?? "N/A")
                            </p>
                        </div>
                    </div>
                </div>

                
                <div style="border-top: 1px solid #e5e5ea; padding-top: 20px; margin-top: 20px;">
                    <h6 style="font-weight: 600; color: #1d1d1f; margin-bottom: 16px;">
                        <i class="fas fa-graduation-cap me-2" style="color: #34c759;"></i>Academic Information
                    </h6>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <small class="text-muted d-block mb-1">Group</small>
                            <p style="margin: 0; color: #636366;">
                                @Model.Student?.GroupName
                            </p>
                        </div>
                        <div class="col-md-6 mb-4">
                            <small class="text-muted d-block mb-1">Enrollment Year</small>
                            <p style="margin: 0; color: #636366;">
                                @Model.Student?.EnrollmentYear
                            </p>
                        </div>
                    </div>
                </div>

                
                @if (!string.IsNullOrEmpty(Model.Student?.Bio))
                {
                    <div style="border-top: 1px solid #e5e5ea; padding-top: 20px; margin-top: 20px;">
                        <h6 style="font-weight: 600; color: #1d1d1f; margin-bottom: 12px;">
                            <i class="fas fa-pen me-2" style="color: #34c759;"></i>Bio
                        </h6>
                        <p style="color: #636366; line-height: 1.6; margin: 0;">
                            @Model.Student?.Bio
                        </p>
                    </div>
                }

                
                <div style="border-top: 1px solid #e5e5ea; padding-top: 20px; margin-top: 20px;">
                    <h6 style="font-weight: 600; color: #1d1d1f; margin-bottom: 16px;">
                        <i class="fas fa-clock me-2" style="color: #34c759;"></i>Record History
                    </h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block mb-1">Created</small>
                            <p style="margin: 0; color: #636366; font-size: 0.95rem;">
                                @Model.Student?.CreatedAt.ToString("g")
                            </p>
                        </div>
                        @if (Model.Student?.UpdatedAt.HasValue == true)
                        {
                            <div class="col-md-6 mb-3">
                                <small class="text-muted d-block mb-1">Last Updated</small>
                                <p style="margin: 0; color: #636366; font-size: 0.95rem;">
                                    @Model.Student?.UpdatedAt?.ToString("g")
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light border-top">
                <div class="d-flex gap-2 justify-content-between">
                    <a asp-page="Index" class="btn btn-outline-secondary" style="border-radius: 8px;">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                    <div class="d-flex gap-2">
                        <a asp-page="Edit" asp-route-id="@Model.Student?.Id" class="btn btn-warning" style="border-radius: 8px; background: #ff9500; border: none; color: white;">
                            <i class="fas fa-edit me-1"></i>Edit Student
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <div class="col-lg-4">
        <div class="card bg-light border-0">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2" style="color: #34c759;"></i>Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-page="Edit" asp-route-id="@Model.Student?.Id" class="btn btn-primary" style="border-radius: 8px; background: #34c759; border: none;">
                        <i class="fas fa-edit me-2"></i>Edit Information
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <button type="button" class="btn btn-outline-danger" style="border-radius: 8px; border: 1px solid #ff3b30;" data-bs-toggle="modal" data-bs-target="#confirmModal" data-delete-url="@Url.Page(null, new { handler = "Delete", id = Model.Student?.Id })" data-delete-entity="@Model.Student?.Id" data-delete-message="Delete this student permanently?">
                            <i class="fas fa-trash me-2"></i>Remove Student
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="card bg-light border-0 mt-3">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb me-2" style="color: #34c759;"></i>Additional Info
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted d-block">
                        <strong>Contact:</strong> Use the email provided for official communication.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block">
                        <strong>Group:</strong> The student's current assigned group or cohort.
                    </small>
                </div>
                <div class="alert alert-info small mb-0">
                    <i class="fas fa-info-circle me-1"></i>
                    Click "Edit Information" to update any student details.
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">
                    <i class="fas fa-exclamation-triangle me-2" style="color: #ff3b30;"></i>Confirm Action
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p style="margin: 0; color: #333;">
                    Are you sure you want to delete this student? This action cannot be undone.
                </p>
                <div id="additionalInfo" class="mt-3" style="display: none;">
                    <hr>
                    <p style="margin: 0; color: #ff3b30; font-weight: 600;">
                        Deleting the student will remove all associated data permanently.
                    </p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger" style="border-radius: 8px;">
                        <i class="fas fa-trash me-1"></i>Delete Student
                    </button>
                    <input type="hidden" name="entityId" id="entityId" value="" />
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript to handle modal behavior and form submission
        document.addEventListener('DOMContentLoaded', function () {
            var confirmModal = document.getElementById('confirmModal');
            confirmModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var deleteUrl = button.getAttribute('data-delete-url');
                var entityId = button.getAttribute('data-delete-entity');
                var message = button.getAttribute('data-delete-message');

                // Update form action
                var form = document.getElementById('deleteForm');
                form.setAttribute('action', deleteUrl);

                // Update hidden input value
                document.getElementById('entityId').value = entityId;

                // Update modal message if needed
                var messageElement = confirmModal.querySelector('.modal-body p');
                messageElement.innerHTML = message || 'Are you sure you want to delete this item?';
            });
        });
    </script>
}
