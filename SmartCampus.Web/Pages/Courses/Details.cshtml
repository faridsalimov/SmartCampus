@page
@using SmartCampus.Web.Pages.Shared
@model SmartCampus.Web.Pages.Courses.DetailsModel
@{
    ViewData["Title"] = "Course Details";

    var pageHeader = new PageHeaderModel
    {
        Title = Model.Course?.Title ?? "Course",
        Subtitle = Model.Course?.Code ?? "",
        IconClass = "fas fa-book",
        IconColor = "#5e5ce6",
        GradientStart = "rgba(94, 92, 230, 0.05)",
        GradientEnd = "rgba(0, 102, 255, 0.05)",
        BorderColor = "rgba(94, 92, 230, 0.1)"
    };
}

<partial name="_PageHeader" model="pageHeader" />


<div class="row">
    
    <div class="col-lg-8">
        
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-light border-bottom">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2" style="color: #5e5ce6;"></i>Course Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div>
                            <h6 class="text-muted small text-uppercase fw-bold">
                                <i class="fas fa-user me-1"></i>Instructor
                            </h6>
                            <p class="h6 mb-0">@Model.Course?.TeacherName</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <h6 class="text-muted small text-uppercase fw-bold">
                                <i class="fas fa-star me-1"></i>Credits
                            </h6>
                            <p class="h6 mb-0">
                                <span style="display: inline-block; background: rgba(94, 92, 230, 0.1); color: #5e5ce6; padding: 4px 12px; border-radius: 6px; font-weight: 600;">@Model.Course?.Credits</span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div>
                            <h6 class="text-muted small text-uppercase fw-bold">
                                <i class="fas fa-calendar me-1"></i>Semester
                            </h6>
                            <p class="h6 mb-0">@(Model.Course?.Semester ?? "N/A")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <h6 class="text-muted small text-uppercase fw-bold">
                                <i class="fas fa-users me-1"></i>Group
                            </h6>
                            <p class="h6 mb-0">@(Model.Course?.GroupName ?? "N/A")</p>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Course?.Description))
                {
                    <div class="mb-4">
                        <h6 class="text-muted small text-uppercase fw-bold mb-2">
                            <i class="fas fa-align-left me-1"></i>Description
                        </h6>
                        <p class="card-text">@Model.Course?.Description</p>
                    </div>
                }

                <hr class="my-4">

                <div class="row small text-muted">
                    <div class="col-md-6">
                        <i class="fas fa-calendar-plus me-1"></i>
                        <span>Created: @Model.Course?.CreatedAt.ToString("dd MMM yyyy HH:mm")</span>
                    </div>
                    @if (Model.Course?.UpdatedAt.HasValue == true)
                    {
                        <div class="col-md-6">
                            <i class="fas fa-calendar-check me-1"></i>
                            <span>Updated: @Model.Course?.UpdatedAt?.ToString("dd MMM yyyy HH:mm")</span>
                        </div>
                    }
                </div>
            </div>

            
            <div class="card-footer bg-light border-top">
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-page="Index" class="btn btn-outline-secondary btn-sm" style="border-radius: 8px;">
                        <i class="fas fa-arrow-left me-1"></i>Back to Courses
                    </a>
                    <a asp-page="Edit" asp-route-id="@Model.Course?.Id" class="btn btn-primary btn-sm" style="border-radius: 8px; background: #5e5ce6; border: none;">
                        <i class="fas fa-edit me-1"></i>Edit Course
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <button type="button" class="btn btn-danger btn-sm" style="border-radius: 8px;" data-bs-toggle="modal" data-bs-target="#alertModal" data-alert-action="@Url.Page(null, new { handler = "Delete", id = Model.Course?.Id })" data-alert-message="Are you sure you want to delete this course and all related data? This action cannot be undone.">
                            <i class="fas fa-trash me-1"></i>Delete Course
                        </button>
                    }
                </div>
            </div>
        </div>

        
        @if (Model.Lessons.Count > 0)
        {
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-chalkboard me-2" style="color: #5e5ce6;"></i>Course Lessons (@Model.Lessons.Count)
                        </h5>
                        <a asp-page="/Lessons/Create" asp-route-courseId="@Model.Course?.Id" class="btn btn-sm btn-outline-primary" style="border-radius: 8px;">
                            <i class="fas fa-plus me-1"></i>Add Lesson
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 80px;">
                                    <i class="fas fa-hashtag me-1"></i>#
                                </th>
                                <th>
                                    <i class="fas fa-book me-1"></i>Title
                                </th>
                                <th style="width: 150px;">
                                    <i class="fas fa-calendar me-1"></i>Date
                                </th>
                                <th style="width: 120px;">
                                    <i class="fas fa-map-marker me-1"></i>Location
                                </th>
                                <th style="width: 100px;" class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lesson in Model.Lessons)
                            {
                                <tr class="align-middle">
                                    <td>
                                        <span style="display: inline-block; background: rgba(94, 92, 230, 0.1); color: #5e5ce6; padding: 4px 8px; border-radius: 4px; font-weight: 600;">@lesson.LessonNumber</span>
                                    </td>
                                    <td>
                                        <a asp-page="/Lessons/Details" asp-route-id="@lesson.Id" class="text-decoration-none fw-bold" style="color: #0066ff;">
                                            @lesson.Title
                                        </a>
                                    </td>
                                    <td>
                                        <small class="text-muted">@lesson.LessonDate.ToString("dd MMM yyyy")</small>
                                    </td>
                                    <td>
                                        <small>@(lesson.Location ?? "N/A")</small>
                                    </td>
                                    <td class="text-center">
                                        @if (lesson.IsCompleted)
                                        {
                                            <span style="display: inline-block; background: rgba(52, 199, 89, 0.1); color: #34c759; padding: 4px 8px; border-radius: 4px; font-weight: 600;">
                                                <i class="fas fa-check-circle me-1"></i>Completed
                                            </span>
                                        }
                                        else
                                        {
                                            <span style="display: inline-block; background: rgba(255, 149, 0, 0.1); color: #ff9500; padding: 4px 8px; border-radius: 4px; font-weight: 600;">
                                                <i class="fas fa-clock me-1"></i>Pending
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    
    <div class="col-lg-4">
        
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-light border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-chart-bar me-2" style="color: #0066ff;"></i>Course Stats
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="small fw-bold">Total Lessons</span>
                        <span style="display: inline-block; background: rgba(0, 102, 255, 0.1); color: #0066ff; padding: 4px 8px; border-radius: 4px; font-weight: 600;">@Model.Lessons.Count</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="small fw-bold">Completed Lessons</span>
                        <span style="display: inline-block; background: rgba(52, 199, 89, 0.1); color: #34c759; padding: 4px 8px; border-radius: 4px; font-weight: 600;">@Model.Lessons.Count(l => l.IsCompleted)</span>
                    </div>
                </div>
                <div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="small fw-bold">Progress</span>
                        <span class="small">@(Model.Lessons.Count > 0 ? ((Model.Lessons.Count(l => l.IsCompleted) * 100) / Model.Lessons.Count) : 0)%</span>
                    </div>
                    <div class="progress" style="height: 8px;">
                        @{
                            var progress = Model.Lessons.Count > 0 ? ((Model.Lessons.Count(l => l.IsCompleted) * 100) / Model.Lessons.Count) : 0;
                        }
                        <div class="progress-bar" role="progressbar" style="width: @progress%; background: #34c759;" aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-file-alt me-2" style="color: #636366;"></i>Details
                </h6>
            </div>
            <div class="card-body small">
                <dl class="row mb-0">
                    <dt class="col-sm-5 text-muted">Code:</dt>
                    <dd class="col-sm-7 fw-bold">@(Model.Course?.Code ?? "N/A")</dd>

                    <dt class="col-sm-5 text-muted">Credits:</dt>
                    <dd class="col-sm-7 fw-bold">@Model.Course?.Credits</dd>

                    <dt class="col-sm-5 text-muted">Semester:</dt>
                    <dd class="col-sm-7 fw-bold">@(Model.Course?.Semester ?? "N/A")</dd>

                    <dt class="col-sm-5 text-muted">Status:</dt>
                    <dd class="col-sm-7">
                        @if (Model.Course?.IsActive == true)
                        {
                            <span style="display: inline-block; background: rgba(52, 199, 89, 0.1); color: #34c759; padding: 4px 8px; border-radius: 4px; font-weight: 600;">Active</span>
                        }
                        else
                        {
                            <span style="display: inline-block; background: rgba(162, 162, 170, 0.1); color: #a2a2aa; padding: 4px 8px; border-radius: 4px; font-weight: 600;">Inactive</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
