@page
@using Microsoft.AspNetCore.Authorization
@using SmartCampus.Web.Pages.Shared
@attribute [Authorize(Roles = "Admin,Teacher")]
@model SmartCampus.Web.Pages.Teachers.IndexModel
@{
    ViewData["Title"] = "Teachers";
    var canCreate = User.IsInRole("Admin");
    var canEdit = User.IsInRole("Admin");
    var canDelete = User.IsInRole("Admin");

    var pageHeader = new PageHeaderModel
    {
        Title = "Teachers",
        Subtitle = "Manage all teachers and faculty members",
        IconClass = "fas fa-chalkboard-user",
        IconColor = "#5e5ce6",
        GradientStart = "rgba(94, 92, 230, 0.05)",
        GradientEnd = "rgba(0, 102, 255, 0.05)",
        BorderColor = "rgba(94, 92, 230, 0.1)",
        Actions = canCreate ? new()
        {
            new PageHeaderAction
            {
                Label = "Add Teacher",
                Url = Url.Page("Create"),
                CssClass = "btn-secondary",
                IconClass = "fas fa-plus"
            }
        } : new()
    };
}

<partial name="_PageHeader" model="pageHeader" />


<div class="card" style="border: 1px solid #e5e5ea; overflow: hidden;">
    @if (Model.Teachers != null && Model.Teachers.Count > 0)
    {
        <div style="overflow-x: auto;">
            <table class="table table-hover" style="margin-bottom: 0;">
                <thead style="background: #f5f5f7; border-bottom: 2px solid #e5e5ea;">
                    <tr>
                        <th style="padding: 16px; font-weight: 600; color: #1d1d1f; font-size: 0.875rem; text-align: left;">Teacher</th>
                        <th style="padding: 16px; font-weight: 600; color: #1d1d1f; font-size: 0.875rem; text-align: center;">Email</th>
                        <th style="padding: 16px; font-weight: 600; color: #1d1d1f; font-size: 0.875rem; text-align: center;">Department</th>
                        <th style="padding: 16px; font-weight: 600; color: #1d1d1f; font-size: 0.875rem; text-align: center;">Specialization</th>
                        <th style="padding: 16px; font-weight: 600; color: #1d1d1f; font-size: 0.875rem; text-align: center;">Status</th>
                        <th style="padding: 16px; font-weight: 600; color: #1d1d1f; font-size: 0.875rem; text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var teacher in Model.Teachers)
                    {
                        <tr style="border-bottom: 1px solid #e5e5ea;">
                            <td style="padding: 16px; text-align: left;">
                                <div style="display: flex; align-items: center; gap: 12px;">
                                    <img src="@(string.IsNullOrEmpty(User.FindFirst("ProfilePhoto")?.Value) ? $"https://ui-avatars.com/api/?name={System.Net.WebUtility.UrlEncode(teacher.FullName ?? "User")}&background=random&color=fff" : User.FindFirst("ProfilePhoto")?.Value)"
                                         alt="@(teacher.FullName ?? "Teacher")"
                                         style="width: 40px; height: 40px; border-radius: 50%; display: block; object-fit: cover;">
                                    <div>
                                        <p style="font-weight: 600; color: #1d1d1f; margin: 0; font-size: 0.875rem;">@teacher.FullName</p>
                                        <small style="color: #a1a1a6;">ID: @teacher.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td style="padding: 16px; color: #636366; font-size: 0.875rem; text-align: center;">@teacher.Email</td>
                            <td style="padding: 16px; color: #636366; font-size: 0.875rem; text-align: center;">@teacher.Department</td>
                            <td style="padding: 16px; color: #636366; font-size: 0.875rem; text-align: center;">@teacher.Specialization</td>
                            <td style="padding: 16px; text-align: center;">
                                @if (teacher.IsActive == true)
                                {
                                    <span style="display: inline-block; background: rgba(52, 199, 89, 0.1); color: #34c759; padding: 4px 10px; border-radius: 6px; font-weight: 600; font-size: 0.75rem;">
                                        Active
                                    </span>
                                }
                                else
                                {
                                    <span style="display: inline-block; background: rgba(255, 149, 0, 0.1); color: #ff9500; padding: 4px 10px; border-radius: 6px; font-weight: 600; font-size: 0.75rem;">
                                        Inactive
                                    </span>
                                }
                            </td>
                            <td style="padding: 16px; text-align: center;">
                                <div style="display: flex; gap: 8px; justify-content: center;">
                                    @await Html.PartialAsync("_ActionButtons", new { CanView = true, CanEdit = canEdit, CanDelete = canDelete, ViewUrl = Url.Page("Details", new { id = teacher.Id }), EditUrl = Url.Page("Edit", new { id = teacher.Id }), DeleteUrl = Url.Page("Index", new { handler = "Delete", id = teacher.Id }), EntityId = teacher.Id })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div style="padding: 40px; text-align: center; color: #a1a1a6;">
            <i class="fas fa-inbox" style="font-size: 2rem; margin-bottom: 10px;"></i>
            <p>No teachers found. Create the first teacher.</p>
        </div>
    }
</div>