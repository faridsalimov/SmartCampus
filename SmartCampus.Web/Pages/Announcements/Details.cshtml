@page
@model SmartCampus.Web.Pages.Announcements.DetailsModel
@{
    ViewData["Title"] = "Announcement Details";
}


<div style="background: linear-gradient(135deg, rgba(255, 149, 0, 0.05) 0%, rgba(255, 59, 48, 0.05) 100%); border-radius: 16px; padding: 30px; margin-bottom: 30px; border: 1px solid rgba(255, 149, 0, 0.1);">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 16px;">
                <a asp-page="Index" class="text-decoration-none" style="color: #ff9500;">
                    <i class="fas fa-arrow-left me-2"></i>Announcements
                </a>
                <span style="color: #a1a1a6;">/</span>
                <span style="color: #636366;">Details</span>
            </div>
            <h1 style="font-size: 2rem; font-weight: 700; color: #1d1d1f; margin-bottom: 8px;">
                <i class="fas fa-bullhorn me-2" style="color: #ff9500;"></i>Announcement Details
            </h1>
            <p style="color: #636366; margin-bottom: 0; font-size: 0.95rem;">
                <i class="fas fa-eye me-1"></i>
                View announcement information
            </p>
        </div>
        <div>
            <span class="badge" style="background-color: #ff9500; font-size: 0.9rem; padding: 8px 12px;">
                <i class="fas fa-list-ul me-1"></i>Details
            </span>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-8">
        
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light border-bottom">
                <h5 class="mb-0">
                    <i class="fas fa-file-alt me-2" style="color: #ff9500;"></i>Announcement Content
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Announcement != null)
                {
                    
                    <div class="mb-4">
                        <h3 style="color: #1d1d1f; font-weight: 700; margin-bottom: 8px; line-height: 1.4;">
                            @Model.Announcement.Title
                        </h3>
                        <small style="color: #a1a1a6;">
                            <i class="fas fa-clock me-1"></i>
                            Posted @Model.Announcement.PublishedDate.ToString("MMM dd, yyyy 'at' HH:mm")
                        </small>
                    </div>

                    <hr style="border: none; height: 1px; background: #e5e5ea; margin: 24px 0;" />

                    
                    <div class="mb-4">
                        <div style="background-color: #f9f9fb; padding: 20px; border-radius: 8px; border-left: 4px solid #ff9500;">
                            <p style="margin: 0; color: #636366; line-height: 1.8; white-space: pre-wrap;">
                                @Model.Announcement.Content
                            </p>
                        </div>
                    </div>

                    <hr style="border: none; height: 1px; background: #e5e5ea; margin: 24px 0;" />

                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6 style="color: #1d1d1f; font-weight: 600; margin-bottom: 8px;">
                                <i class="fas fa-info-circle me-1" style="color: #ff9500;"></i>Status
                            </h6>
                            <p style="margin: 0;">
                                @if (Model.Announcement.IsPublished)
                                {
                                    <span class="badge" style="background-color: #34c759;">
                                        <i class="fas fa-check-circle me-1"></i>Published
                                    </span>
                                }
                                else
                                {
                                    <span class="badge" style="background-color: #ff9500;">
                                        <i class="fas fa-edit me-1"></i>Draft
                                    </span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 style="color: #1d1d1f; font-weight: 600; margin-bottom: 8px;">
                                <i class="fas fa-users me-1" style="color: #ff9500;"></i>Visibility
                            </h6>
                            <p style="margin: 0; color: #636366;">
                                Public to All Students
                            </p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Announcement not found.
                    </div>
                }
            </div>

            
            <div class="card-footer bg-light border-top">
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-page="Index" class="btn btn-secondary" style="border-radius: 8px;">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                    @if (Model.Announcement != null)
                    {
                        <a asp-page="Edit" asp-route-id="@Model.Announcement.Id" class="btn btn-primary" style="border-radius: 8px; background: #ff9500; border: none;">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>

                        @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                        {
                            <button type="button" class="btn btn-danger" style="border-radius: 8px;" data-bs-toggle="modal" data-bs-target="#confirmModal" data-delete-url="@Url.Page(null, new { handler = "Delete", id = Model.Announcement.Id })" data-delete-entity="@Model.Announcement.Id">
                                <i class="fas fa-trash me-1"></i>Delete
                            </button>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    
    <div class="col-lg-4">
        <div class="card bg-light border-0 mb-4">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb me-2" style="color: #ff9500;"></i>Information
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Title:</strong> The subject of the announcement.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Content:</strong> The full announcement message.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Status:</strong> Whether the announcement is published.
                    </small>
                </div>
                <div class="alert alert-info small mb-0">
                    <i class="fas fa-info-circle me-1"></i>
                    Announcements are visible to all students immediately upon publishing.
                </div>
            </div>
        </div>

        <div class="card bg-light border-0">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-clock me-2" style="color: #ff9500;"></i>Timeline
                </h6>
            </div>
            <div class="card-body">
                <small class="text-muted d-block mb-2">
                    <strong>Published:</strong> @Model.Announcement?.PublishedDate.ToString("MMM dd, yyyy HH:mm")
                </small>
                @if (Model.Announcement?.UpdatedAt.HasValue == true)
                {
                    <small class="text-muted d-block">
                        <strong>Last Updated:</strong> @Model.Announcement.UpdatedAt?.ToString("MMM dd, yyyy HH:mm")
                    </small>
                }
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">
                    <i class="fas fa-exclamation-triangle me-2" style="color: #dc3545;"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">
                    Are you sure you want to delete this announcement? This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <form method="post" asp-page-handler="Delete" id="deleteForm" style="display: inline;">
                    <input type="hidden" name="id" id="deleteEntityId" value="" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Set up delete form action URL and entity ID in the modal before showing
        var confirmModal = document.getElementById('confirmModal');
        confirmModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget; // Button that triggered the modal
            var url = button.getAttribute('data-delete-url');
            var entityId = button.getAttribute('data-delete-entity');

            var form = confirmModal.querySelector('form#deleteForm');
            form.setAttribute('action', url);
            confirmModal.querySelector('input#deleteEntityId').value = entityId;
        });
    </script>
}
