@page
@using SmartCampus.Web.Pages.Shared
@model SmartCampus.Web.Pages.Announcements.EditModel
@{
    ViewData["Title"] = "Edit Announcement";

    var pageHeader = new PageHeaderModel
    {
        Title = "Edit Announcement",
        Subtitle = "Update announcement information",
        IconClass = "fas fa-bullhorn",
        IconColor = "#ff9500",
        GradientStart = "rgba(255, 149, 0, 0.05)",
        GradientEnd = "rgba(255, 59, 48, 0.05)",
        BorderColor = "rgba(255, 149, 0, 0.1)"
    };
}

<partial name="_PageHeader" model="pageHeader" />


<div class="row">
    <div class="col-lg-8">
        <form method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-header bg-light border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2" style="color: #ff9500;"></i>Announcement Details
                    </h5>
                </div>
                <div class="card-body">
                    
                    <input type="hidden" asp-for="Announcement.Id" />
                    <input type="hidden" asp-for="Announcement.TeacherId" />
                    <input type="hidden" asp-for="Announcement.PublishedDate" />
                    <input type="hidden" asp-for="Announcement.IsPublished" />

                    
                    <div asp-validation-summary="All" class="alert alert-danger alert-dismissible fade show d-none" role="alert" id="validationSummary">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Please fix the following errors:</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                    
                    <div class="mb-4">
                        <label asp-for="Announcement.Title" class="form-label">
                            <i class="fas fa-heading me-1"></i>Title <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Announcement.Title" class="form-control" placeholder="Enter announcement title" required />
                        <small class="form-text text-muted">A clear and descriptive title for your announcement</small>
                        <span asp-validation-for="Announcement.Title" class="text-danger small d-block mt-1"></span>
                    </div>

                    
                    <div class="mb-4">
                        <label asp-for="Announcement.Content" class="form-label">
                            <i class="fas fa-align-left me-1"></i>Content <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="Announcement.Content" class="form-control" rows="8" placeholder="Enter announcement content..." required></textarea>
                        <small class="form-text text-muted">Provide detailed information about the announcement</small>
                        <span asp-validation-for="Announcement.Content" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-check form-switch" style="display: flex; align-items: center; gap: 12px; padding-left: 0;">
                            <input type="checkbox" asp-for="Announcement.IsPinned" class="form-check-input" id="isPinnedCheckbox" style="width: 3em; height: 1.5em; cursor: pointer; margin: 0;">
                            <div style="flex: 1;">
                                <label class="form-check-label" for="isPinnedCheckbox" style="font-weight: 600; color: #1d1d1f; cursor: pointer; margin: 0;">
                                    <i class="fas fa-thumbtack me-1" style="color: #ff3b30;"></i>Pin this announcement
                                </label>
                                <small class="form-text text-muted d-block mt-1">Pinned announcements will appear at the top of the list for all users</small>
                            </div>
                        </div>
                    </div>

                    <style>
                        /* Ensure toggle styling is consistent */
                        input[type="checkbox"]#isPinnedCheckbox {
                            accent-color: #0066ff;
                            flex-shrink: 0;
                        }
                        
                        input[type="checkbox"]#isPinnedCheckbox:not(:checked) {
                            accent-color: #e5e5ea;
                        }
                    </style>
                </div>

                
                <div class="card-footer bg-light border-top">
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-page="Index" class="btn btn-outline-secondary" style="border-radius: 8px;">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary" style="border-radius: 8px; background: #ff9500; border: none;">
                            <i class="fas fa-save me-1"></i>Update Announcement
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    
    <div class="col-lg-4">
        <div class="card bg-light border-0">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb me-2" style="color: #ff9500;"></i>Tips
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Title:</strong> Keep it concise and informative.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Content:</strong> Be clear and include all necessary details.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Changes:</strong> Your updates will be reflected immediately.
                    </small>
                </div>
                <div class="alert alert-info small mb-0">
                    <i class="fas fa-info-circle me-1"></i>
                    Fields marked with <span class="text-danger">*</span> are required.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms).forEach(function(form) {
                    form.addEventListener('submit', function(event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                            document.getElementById('validationSummary').classList.remove('d-none');
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
