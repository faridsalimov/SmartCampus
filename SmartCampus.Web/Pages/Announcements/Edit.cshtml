@page
@model SmartCampus.Web.Pages.Announcements.EditModel
@{
    ViewData["Title"] = "Edit Announcement";
}


<div style="background: linear-gradient(135deg, rgba(255, 149, 0, 0.05) 0%, rgba(255, 59, 48, 0.05) 100%); border-radius: 16px; padding: 30px; margin-bottom: 30px; border: 1px solid rgba(255, 149, 0, 0.1);">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 16px;">
                <a asp-page="Index" class="text-decoration-none" style="color: #ff9500;">
                    <i class="fas fa-arrow-left me-2"></i>Announcements
                </a>
                <span style="color: #a1a1a6;">/</span>
                <span style="color: #636366;">Edit</span>
            </div>
            <h1 style="font-size: 2rem; font-weight: 700; color: #1d1d1f; margin-bottom: 8px;">
                <i class="fas fa-edit me-2" style="color: #ff9500;"></i>Edit Announcement
            </h1>
            <p style="color: #636366; margin-bottom: 0; font-size: 0.95rem;">
                <i class="fas fa-pencil-alt me-1"></i>
                Update announcement information
            </p>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-8">
        <form method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-header bg-light border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2" style="color: #ff9500;"></i>Announcement Details
                    </h5>
                </div>
                <div class="card-body">
                    
                    <input type="hidden" asp-for="Announcement.Id" />

                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show d-none" role="alert" id="validationSummary">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Please fix the following errors:</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                    
                    <div class="mb-4">
                        <label asp-for="Announcement.Title" class="form-label">
                            <i class="fas fa-heading me-1"></i>Title <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Announcement.Title" class="form-control" placeholder="Enter announcement title" required />
                        <small class="form-text text-muted">A clear and descriptive title for your announcement</small>
                        <span asp-validation-for="Announcement.Title" class="text-danger small d-block mt-1"></span>
                    </div>

                    
                    <div class="mb-4">
                        <label asp-for="Announcement.Content" class="form-label">
                            <i class="fas fa-align-left me-1"></i>Content <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="Announcement.Content" class="form-control" rows="8" placeholder="Enter announcement content..." required></textarea>
                        <small class="form-text text-muted">Provide detailed information about the announcement</small>
                        <span asp-validation-for="Announcement.Content" class="text-danger small d-block mt-1"></span>
                    </div>
                </div>

                
                <div class="card-footer bg-light border-top">
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-page="Index" class="btn btn-outline-secondary" style="border-radius: 8px;">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary" style="border-radius: 8px; background: #ff9500; border: none;">
                            <i class="fas fa-save me-1"></i>Update Announcement
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    
    <div class="col-lg-4">
        <div class="card bg-light border-0">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb me-2" style="color: #ff9500;"></i>Tips
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Title:</strong> Keep it concise and informative.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Content:</strong> Be clear and include all necessary details.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Changes:</strong> Your updates will be reflected immediately.
                    </small>
                </div>
                <div class="alert alert-info small mb-0">
                    <i class="fas fa-info-circle me-1"></i>
                    Fields marked with <span class="text-danger">*</span> are required.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms).forEach(function(form) {
                    form.addEventListener('submit', function(event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                            document.getElementById('validationSummary').classList.remove('d-none');
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
