@page
@using SmartCampus.Web.Pages.Shared
@model SmartCampus.Web.Pages.Groups.DetailsModel
@{
    ViewData["Title"] = "Group Details";

    var pageHeader = new PageHeaderModel
    {
        Title = Model.Group?.GroupName ?? "Group",
        Subtitle = Model.Group?.GroupCode ?? "",
        IconClass = "fas fa-users",
        IconColor = "#5e5ce6",
        GradientStart = "rgba(94, 92, 230, 0.05)",
        GradientEnd = "rgba(0, 102, 255, 0.05)",
        BorderColor = "rgba(94, 92, 230, 0.1)"
    };
}

<partial name="_PageHeader" model="pageHeader" />


<div class="row">
    
    <div class="col-lg-8">
        
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-light border-bottom">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2" style="color: #5e5ce6;"></i>Group Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div>
                            <h6 class="text-muted small text-uppercase fw-bold">
                                <i class="fas fa-tag me-1"></i>Group Name
                            </h6>
                            <p class="h6 mb-0">@Model.Group?.GroupName</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <h6 class="text-muted small text-uppercase fw-bold">
                                <i class="fas fa-barcode me-1"></i>Code
                            </h6>
                            <p class="h6 mb-0">
                                <span style="display: inline-block; background: rgba(94, 92, 230, 0.1); color: #5e5ce6; padding: 4px 12px; border-radius: 6px; font-weight: 600;">@Model.Group?.GroupCode</span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div>
                            <h6 class="text-muted small text-uppercase fw-bold">
                                <i class="fas fa-calendar me-1"></i>Academic Year
                            </h6>
                            <p class="h6 mb-0">@Model.Group?.AcademicYear</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <h6 class="text-muted small text-uppercase fw-bold">
                                <i class="fas fa-users me-1"></i>Members
                            </h6>
                            <p class="h6 mb-0">
                                <span style="display: inline-block; background: rgba(52, 199, 89, 0.1); color: #34c759; padding: 4px 12px; border-radius: 6px; font-weight: 600;">@(Model.Group?.StudentCount ?? 0) students</span>
                            </p>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <div class="row small text-muted">
                    <div class="col-md-6">
                        <i class="fas fa-calendar-plus me-1"></i>
                        <span>Created: @Model.Group?.CreatedAt.ToString("dd MMM yyyy HH:mm")</span>
                    </div>
                </div>
            </div>

            
            <div class="card-footer bg-light border-top">
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-page="Index" class="btn btn-outline-secondary btn-sm" style="border-radius: 8px;">
                        <i class="fas fa-arrow-left me-1"></i>Back to Groups
                    </a>
                    <a asp-page="Edit" asp-route-id="@Model.Group?.Id" class="btn btn-primary btn-sm" style="border-radius: 8px; background: #5e5ce6; border: none;">
                        <i class="fas fa-edit me-1"></i>Edit Group
                    </a>
                </div>
            </div>
        </div>

        
        @if (Model.Students.Count > 0)
        {
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-user-graduate me-2" style="color: #5e5ce6;"></i>Group Members (@Model.Students.Count)
                    </h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <i class="fas fa-user me-1"></i>Name
                                </th>
                                <th>
                                    <i class="fas fa-envelope me-1"></i>Email
                                </th>
                                <th style="width: 100px;">
                                    <i class="fas fa-cog me-1"></i>Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model.Students)
                            {
                                <tr class="align-middle">
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 8px;">
                                            <img src="@(string.IsNullOrEmpty(User.FindFirst("ProfilePhoto")?.Value) ? $"https://ui-avatars.com/api/?name={System.Net.WebUtility.UrlEncode(@student.FullName ?? "User")}&background=random&color=fff" : User.FindFirst("ProfilePhoto")?.Value)"
                                                 alt="@(student.FullName ?? "Student")"
                                                 style="width: 32px; height: 32px; border-radius: 50%; display: block; object-fit: cover;">
                                            <span>@student.FullName</span>
                                        </div>
                                    </td>
                                    <td>@student.Email</td>
                                    <td>
                                        <a asp-page="/Students/Details" asp-route-id="@student.Id" style="display: inline-flex; align-items: center; justify-content: center; width: 32px; height: 32px; border-radius: 6px; background: #f5f5f7; color: #0066ff; text-decoration: none;" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div style="background: linear-gradient(135deg, rgba(94, 92, 230, 0.05) 0%, rgba(0, 102, 255, 0.05) 100%); border: 1px solid rgba(94, 92, 230, 0.1); border-radius: 12px; padding: 40px; text-align: center;">
                <div style="font-size: 3rem; color: #5e5ce6; opacity: 0.3; margin-bottom: 16px;">
                    <i class="fas fa-inbox"></i>
                </div>
                <h4 style="color: #1d1d1f; font-weight: 600; margin-bottom: 8px;">No Members Yet</h4>
                <p style="color: #636366; margin-bottom: 0;">Add students to this group to get started.</p>
            </div>
        }
    </div>

    
    <div class="col-lg-4">
        
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-light border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-chart-bar me-2" style="color: #0066ff;"></i>Group Stats
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="small fw-bold">Total Members</span>
                        <span style="display: inline-block; background: rgba(0, 102, 255, 0.1); color: #0066ff; padding: 4px 8px; border-radius: 4px; font-weight: 600;">@(Model.Group?.StudentCount ?? 0)</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="small fw-bold">Academic Year</span>
                        <span style="display: inline-block; background: rgba(94, 92, 230, 0.1); color: #5e5ce6; padding: 4px 8px; border-radius: 4px; font-weight: 600;">@Model.Group?.AcademicYear</span>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-file-alt me-2" style="color: #636366;"></i>Details
                </h6>
            </div>
            <div class="card-body small">
                <dl class="row mb-0">
                    <dt class="col-sm-5 text-muted">Code:</dt>
                    <dd class="col-sm-7 fw-bold">@(Model.Group?.GroupCode ?? "N/A")</dd>

                    <dt class="col-sm-5 text-muted">Members:</dt>
                    <dd class="col-sm-7 fw-bold">@(Model.Group?.StudentCount ?? 0)</dd>

                    <dt class="col-sm-5 text-muted">Created:</dt>
                    <dd class="col-sm-7 fw-bold">@Model.Group?.CreatedAt.ToString("dd MMM yyyy")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
