@page
@using SmartCampus.Web.Pages.Shared
@model SmartCampus.Web.Pages.Groups.EditModel
@{
    ViewData["Title"] = "Edit Group";

    var pageHeader = new PageHeaderModel
    {
        Title = "Edit Group",
        Subtitle = "Update group information",
        IconClass = "fas fa-users",
        IconColor = "#5e5ce6",
        GradientStart = "rgba(94, 92, 230, 0.05)",
        GradientEnd = "rgba(0, 102, 255, 0.05)",
        BorderColor = "rgba(94, 92, 230, 0.1)"
    };
}

<partial name="_PageHeader" model="pageHeader" />


<div class="row">
    <div class="col-lg-8">
        <form method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-header bg-light border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2" style="color: #5e5ce6;"></i>Group Information
                    </h5>
                </div>
                <div class="card-body">
                    
                    <input type="hidden" asp-for="Group.Id" />

                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show d-none" role="alert" id="validationSummary">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Please fix the following errors:</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Group.GroupCode" class="form-label">
                                <i class="fas fa-barcode me-1"></i>Group Code <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Group.GroupCode" class="form-control" required style="border: 1.5px solid #e5e5ea; border-radius: 8px;" />
                            <small class="form-text text-muted">Unique code for the group</small>
                            <span asp-validation-for="Group.GroupCode" class="text-danger small d-block mt-1"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="Group.GroupName" class="form-label">
                                <i class="fas fa-tag me-1"></i>Group Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Group.GroupName" class="form-control" required style="border: 1.5px solid #e5e5ea; border-radius: 8px;" />
                            <small class="form-text text-muted">Display name for the group</small>
                            <span asp-validation-for="Group.GroupName" class="text-danger small d-block mt-1"></span>
                        </div>
                    </div>

                    
                    <div class="mb-4">
                        <label asp-for="Group.AcademicYear" class="form-label">
                            <i class="fas fa-calendar me-1"></i>Academic Year <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Group.AcademicYear" class="form-control" required style="border: 1.5px solid #e5e5ea; border-radius: 8px;" />
                        <small class="form-text text-muted">Academic year for this group</small>
                        <span asp-validation-for="Group.AcademicYear" class="text-danger small d-block mt-1"></span>
                    </div>
                </div>

                
                <div class="card-footer bg-light border-top">
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-page="Index" class="btn btn-outline-secondary" style="border-radius: 8px;">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary" style="border-radius: 8px; background: #5e5ce6; border: none;">
                            <i class="fas fa-save me-1"></i>Update Group
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    
    <div class="col-lg-4">
        <div class="card bg-light border-0">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb me-2" style="color: #5e5ce6;"></i>Tips
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Group Code:</strong> Ensure the code remains unique.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Group Name:</strong> Use a descriptive name for easy identification.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Academic Year:</strong> Update if the group spans multiple years.
                    </small>
                </div>
                <div class="alert alert-info small mb-0">
                    <i class="fas fa-info-circle me-1"></i>
                    Fields marked with <span class="text-danger">*</span> are required.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms).forEach(function(form) {
                    form.addEventListener('submit', function(event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                            document.getElementById('validationSummary').classList.remove('d-none');
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
