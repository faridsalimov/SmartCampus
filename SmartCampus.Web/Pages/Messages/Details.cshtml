@page
@model SmartCampus.Web.Pages.Messages.DetailsModel
@{
    ViewData["Title"] = "Message Details";
}


<div style="background: linear-gradient(135deg, rgba(0, 102, 255, 0.05) 0%, rgba(94, 92, 230, 0.05) 100%); border-radius: 16px; padding: 30px; margin-bottom: 30px; border: 1px solid rgba(0, 102, 255, 0.1);">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 16px;">
                <a asp-page="Index" class="text-decoration-none" style="color: #0066ff;">
                    <i class="fas fa-arrow-left me-2"></i>Messages
                </a>
                <span style="color: #a1a1a6;">/</span>
                <span style="color: #636366;">Details</span>
            </div>
            <h1 style="font-size: 2rem; font-weight: 700; color: #1d1d1f; margin-bottom: 8px;">
                <i class="fas fa-envelope me-2" style="color: #0066ff;"></i>Message Details
            </h1>
            <p style="color: #636366; margin-bottom: 0; font-size: 0.95rem;">
                <i class="fas fa-eye me-1"></i>
                View message content
            </p>
        </div>
        <div>
            <span class="badge" style="background-color: #0066ff; font-size: 0.9rem; padding: 8px 12px;">
                <i class="fas fa-list-ul me-1"></i>Details
            </span>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-8">
        
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light border-bottom">
                <h5 class="mb-0">
                    <i class="fas fa-file-alt me-2" style="color: #0066ff;"></i>Message Content
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Message != null)
                {
                    
                    <div class="mb-4">
                        <div style="display: flex; justify-content: space-between; align-items: center; padding: 12px; background-color: #f5f5f7; border-radius: 8px;">
                            <div>
                                <h6 style="margin: 0; font-weight: 600; color: #1d1d1f;">
                                    <i class="fas fa-user-circle me-2" style="color: #0066ff;"></i>
                                    @Model.Message.SenderName
                                </h6>
                                <small style="color: #636366;">
                                    @Model.Message.SentDate.ToString("MMM dd, yyyy 'at' HH:mm")
                                </small>
                            </div>
                            <span class="badge" style="background-color: #0066ff;">
                                <i class="fas fa-envelope me-1"></i>Message
                            </span>
                        </div>
                    </div>

                    <hr style="border: none; height: 1px; background: #e5e5ea; margin: 24px 0;" />

                    
                    <div class="mb-4">
                        <h6 style="color: #1d1d1f; font-weight: 600; margin-bottom: 12px;">
                            <i class="fas fa-align-left me-2" style="color: #0066ff;"></i>Message
                        </h6>
                        <div style="background-color: #f9f9fb; padding: 16px; border-radius: 8px; border-left: 4px solid #0066ff;">
                            <p style="margin: 0; color: #636366; line-height: 1.8; white-space: pre-wrap;">
                                @Model.Message.Content
                            </p>
                        </div>
                    </div>

                    <hr style="border: none; height: 1px; background: #e5e5ea; margin: 24px 0;" />

                    
                    <div>
                        <h6 style="color: #1d1d1f; font-weight: 600; margin-bottom: 8px;">
                            <i class="fas fa-info-circle me-1" style="color: #0066ff;"></i>Status
                        </h6>
                        <p style="margin: 0;">
                            @if (Model.Message.IsRead)
                            {
                                <span class="badge" style="background-color: #34c759;">
                                    <i class="fas fa-check-circle me-1"></i>Read
                                </span>
                            }
                            else
                            {
                                <span class="badge" style="background-color: #0066ff;">
                                    <i class="fas fa-envelope me-1"></i>Unread
                                </span>
                            }
                        </p>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Message not found.
                    </div>
                }
            </div>

            
            <div class="card-footer bg-light border-top">
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-page="Index" class="btn btn-secondary" style="border-radius: 8px;">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                    @if (Model.Message != null)
                    {
                        <a href="#" class="btn btn-primary" style="border-radius: 8px; background: #0066ff; border: none;">
                            <i class="fas fa-reply me-1"></i>Reply
                        </a>
                        @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                        {
                            <button type="button" class="btn btn-danger" style="border-radius: 8px;" data-bs-toggle="modal" data-bs-target="#confirmModal" data-delete-url="@Url.Page(null, new { handler = "Delete", id = Model.Message.Id })" data-delete-entity="@Model.Message.Id" data-delete-message="Delete this message?">
                                <i class="fas fa-trash me-1"></i>Delete
                            </button>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    
    <div class="col-lg-4">
        <div class="card bg-light border-0 mb-4">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb me-2" style="color: #0066ff;"></i>Information
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Sender:</strong> Person who sent the message.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Content:</strong> The full message text.
                    </small>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block mb-2">
                        <strong>Status:</strong> Whether the message is read or unread.
                    </small>
                </div>
                <div class="alert alert-info small mb-0">
                    <i class="fas fa-info-circle me-1"></i>
                    You can reply to this message using the Reply button.
                </div>
            </div>
        </div>

        <div class="card bg-light border-0">
            <div class="card-header border-bottom">
                <h6 class="mb-0">
                    <i class="fas fa-clock me-2" style="color: #0066ff;"></i>Timeline
                </h6>
            </div>
            <div class="card-body">
                <small class="text-muted d-block mb-2">
                    <strong>Sent:</strong> @Model.Message?.SentDate.ToString("MMM dd, yyyy HH:mm")
                </small>
                @if (Model.Message?.ReadDate.HasValue == true)
                {
                    <small class="text-muted d-block">
                        <strong>Read:</strong> @Model.Message.ReadDate?.ToString("MMM dd, yyyy HH:mm")
                    </small>
                }
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">
                    <i class="fas fa-exclamation-triangle me-2" style="color: #dc3545;"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p style="margin: 0; color: #1d1d1f; line-height: 1.5;">
                    Are you sure you want to delete this message? This action cannot be undone.
                </p>
                <div class="mt-3">
                    <strong>Message Content:</strong>
                    <div style="background-color: #f8f9fa; padding: 10px; border-radius: 4px; border: 1px solid #e9ecef;">
                        <pre style="margin: 0; color: #333;">
                            @Model.Message.Content
                        </pre>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times-circle me-1"></i>Cancel
                </button>
                <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Message.Id" style="display: inline;">
                    <button type="submit" class="btn btn-danger" style="border-radius: 8px;">
                        <i class="fas fa-trash me-1"></i>Delete Message
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
